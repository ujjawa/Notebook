<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <link rel='stylesheet' href="/style.css">
  <script src="https://kit.fontawesome.com/e58fadec6b.js" crossorigin="anonymous"></script>
  <body>
      
  <%- include('./partials/nav.ejs') %>

  <div class="text-center text-light display-4 mt-5"><b>NOTEBOOK</b></div>  
  <div  class="container det text-light mt-4 p-2">
    <h2><%= blogs.title%></h2>
    <div class="mt-3">
        <h5><%= blogs.body%></h5>
    </div>
    <a class="del" data-doc="<%= blogs._id %>"><i class="fas fa-trash-alt display-4"></i></a>
    <a class="upd" href="/upd/<%= blogs._id %>" ><i class="fas fa-edit display-4"></i></a>
  </div>
  
  <script>
  const delt=document.querySelector('a.del');
  delt.addEventListener('click',(e)=>{
   const path=`/del/${delt.dataset.doc}`;
   fetch(path,{
   method:'DELETE'
   })
     .then((r)=>r.json())
     .then((data)=>window.location.href=data.redirect)
     .catch((err)=>console.log(err))
   });
  </script>
</body>
</html>